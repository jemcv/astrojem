---
import Project from './Cards.astro';
import { ShieldIcon, TerminalIcon, CodeIcon } from 'astro-feather';
---
<section class="mt-4">
    <h1 class="font-bold mb-2">Projects</h1>
    <Project 
        Icon={ShieldIcon} 
        url="https://github.com/carbonetes/brainiac"
        title="brainiac" 
        description="an open-source tool i contributed to during my internship"
    />
    <Project 
        Icon={TerminalIcon} 
        url="https://github.com/jemcv/lolst"
        title="lolst" 
        description="bash script that displays league of legends stats in the terminal"
    />
    <Project
        Icon={CodeIcon} 
        url="https://github.com/jemcv/astrojem"
        title="astrojem" 
        description="the source code of my personal site built with astro"
    />
</section>
