---
import BaseLayout from '../layouts/BaseLayout.astro';
import Projects from '../components/Projects.astro';
import Writings from '../components/Writings.astro';
import Socials from '../components/Socials.astro';

const pageTitle = "jemcv";

const information = {
  name: "Jem",
  country: "PH",
  occupation: "student",
  hobbies: ["technology", "coding", "mechanical keyboards"],
};
/*
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Noto+Emoji&family=Noto+Sans+Tagalog&display=swap" rel="stylesheet">
*/
---
<BaseLayout pageTitle={pageTitle}>
	<h1 class="text-4xl font-bold mb-4">ᜇᜒᜌᜒᜋ᜔</h1>
	<div class="p-4">
		<p class="mb-4">Hey there! I'm <span class="font-bold">{information.name}</span>.</p>
		<p class="mb-4">Practicing touch typing ⌨ with a <b>75%</b> keyboard + <b>Akko V3 Cream Black Pro </b> switches.</p>
		<p>Currently adopting a design approach focused on simplicity and clarity. My guiding philosophy is based on the belief that '<span class="font-bold italic">less is more</span>'.</p>
	</div>
	<Projects />
    <Writings />
    <Socials />
</BaseLayout>